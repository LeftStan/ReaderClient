<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.readerclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ReaderClientApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.reservation.BookReserve"></activity>
        <activity android:name=".ui.debtquery.DebtQuery" />
        <activity android:name=".ui.searchborrow.ReturnBook" />
        <activity android:name=".ui.hotbook.HotBook" />
        <activity android:name=".ui.searchborrow.BorrowSearch" />
        <activity
            android:name=".ui.searchbook.SearchBook"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>
    </application>

</manifest>